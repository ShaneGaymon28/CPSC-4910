@model Application;

@{
    Layout = null;
}

@{
    Sponsor sponsor = ViewData["Sponsor"] as Sponsor;
    User user = ViewData["User"] as User;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Add Application</title>
</head>
<body>
<div>
    <h2>Review Application</h2>
    
    <div>
        <form asp-controller="Applications" asp-action="Add" method="post">

            <div>
                <label asp-for="User.FirstName">First Name</label>
                <input type="text" asp-for="User.FirstName" value="@user.FirstName" readonly/>
            </div>
            <div>
                <label asp-for="User.LastName">Last Name</label>
                <input type="text" asp-for="User.LastName" value="@user.LastName" readonly/>
            </div>
            <div>
                <label asp-for="User.Email">Email</label>
                <input type="text" asp-for="User.Email" value="@user.Email" readonly/>
            </div>

            <div>
                <label asp-for="Sponsor.Name">Sponsor</label>
                <input type="text" value="@sponsor.Name" readonly/>
                
            </div>
            
            <div>
                @Html.HiddenFor(a => a.SponsorId, new {Value = @sponsor.Id})
                @Html.HiddenFor(a => a.UserId, new {Value = @user.Id})
            </div>


            <div>
                <a asp-controller="Applications" asp-action="DriverApplication">Back</a>
                <input type="submit" value="Submit Application">
                @*<a asp-controller="Applications" asp-action="Add" asp-route-id="@Model.UserId">Submit Application</a>*@
            </div>
        </form>
    </div>

</div>
</body>
</html>