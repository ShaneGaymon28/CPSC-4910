@model IEnumerable<AppUser>

@{
    Layout = "_AdminDashboardLayout";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>View Users</title>
    <link rel="stylesheet" href="~/css/adminviewaccounts.css"/>
</head>
<body>
<div>

    <div class="users-div">
        <h1>All Users</h1>
        <table class="users-table">
            <tr>
                <th>Type</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
            </tr>
            
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-controller="User" asp-action="ViewUser" asp-route-userName="@item.UserName">@Html.DisplayFor(modelItem => item.UserRole)</a></td>
                        <td><a asp-controller="User" asp-action="ViewUser" asp-route-userName="@item.UserName">@Html.DisplayFor(modelItem => item.FirstName)</a></td>
                        <td><a asp-controller="User" asp-action="ViewUser" asp-route-userName="@item.UserName">@Html.DisplayFor(modelItem => item.LastName)</a></td>
                        <td><a asp-controller="User" asp-action="ViewUser" asp-route-userName="@item.UserName">@Html.DisplayFor(modelItem => item.Email)</a></td>
                    </tr>
                }
            }
        </table>
    </div>
    
    
    <div>
        <a asp-controller="User" asp-action="AdminCreateAccount" ><button type="button">Create new Account</button></a>
    </div>
    
    
    <div>
        <a asp-controller="Dashboard" asp-action="Index"><button type="button">Back</button></a>
    </div>
    
    
</div>
</body>
</html>